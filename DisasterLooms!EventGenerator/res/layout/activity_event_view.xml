<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/ivTile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/tile_description"
        android:src="@drawable/tile" />

    <View
        android:id="@+id/vLine"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/tvTileName"
        android:layout_alignLeft="@+id/tvTileName"
        android:layout_alignRight="@+id/tvTileName"
        android:layout_marginBottom="-6dp"
        android:background="#ffffff" />

    <!-- scrollHorizontally and maxlines were needed by htc wildfire s android2.3.5 -->
    <TextView
        android:id="@+id/tvTileName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:scrollHorizontally="false" 
        android:maxLines="10"
        android:gravity="center"
        android:text="@string/name_2013_07"
        android:textColor="#ffffff" />
    <!-- scrollHorizontally and maxlines were needed by htc wildfire s android2.3.5 -->
    <TextView
        android:id="@+id/tvTileContent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:scrollHorizontally="false"
        android:maxLines="10"
        android:gravity="center"
        android:text="@string/content_2013_07"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/new_event" />

</RelativeLayout>